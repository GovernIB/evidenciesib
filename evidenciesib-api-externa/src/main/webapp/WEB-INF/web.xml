<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <display-name>EvidenciesIB: API REST EXTERNA</display-name>

    <!-- All html files at any path -->
    <!-- Specifically index.html at the root -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/ignore.html</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>evidenciesib_api_externa_public</web-resource-name>
            <url-pattern>/public/*</url-pattern>
        </web-resource-collection>
        <!-- No auth-constraint means everybody has access! -->
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>evidenciesib_api_externa_secured</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>EVI_WS</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <!-- Per defecte BASIC. Si profile -Pcaib llavors KEYCLOAK -->
        <auth-method>${auth.method}</auth-method>
        <realm-name>Govern de les Illes Balears</realm-name>
    </login-config>

    <security-role>
        <description>Usuari Aplicaci√≥ de EvidenciesIB</description>
        <role-name>EVI_WS</role-name>
    </security-role>

</web-app>
